{% extends 'base.html.twig' %}

{% block body %}

<div class="jumbotron">
    <div class="container">
        <div class="row">
            <div class="col-md-8">

            </div>
            <div class="col-md-4">
                <h3>{{ property.title }}</h3>
                <h3>{{ property.rooms }} Pièce {{property.surface }} m2 </h3>
                <div class="text-primary">{{ property.formatToPrice }}</div>
                <a href="" calss="btn btn-primary"> Contactez l'agence</a>
            </div>
        </div>
    </div>
</div>
   <div class="container mt-4">

       <p>
           {{ property.description |nl2br}}
       </p>

       <div class="row">
           <div class="col-md-8">
               <h2>Caractéristique</h2>
               <table class="table table-striped">
                   <tr>
                       <td>Surface habitable</td>
                       <td>{{ property.surface }}</td>
                   </tr>
                   <tr>
                       <td>Pièces</td>
                       <td>{{ property.rooms }}</td>
                   </tr>
                   <tr>
                       <td>Chambre</td>
                       <td>{{ property.bedrooms }}</td>
                   </tr>
                   <tr>
                       <td>Etage</td>
                       <td>{{ property.floor }}</td>
                   </tr>
                   <tr>
                       <td>Chauffage</td>
                       <td>{{ property.heatType }}</td>
                   </tr>


               </table>
           </div>
           <div class="col-md-4">
               <h2>Spécificité</h2>
           </div>
       </div>
   </div>

   </div>
{% endblock %}